using UnityEngine;

public class Player_Move : MonoBehaviour
{
    public CharacterController controller;
    [HideInInspector]
    public float playerSpeedCurrent = 3.0f;
    public float playerSpeedWalk = 3.0f;
    public float playerSpeedJog = 6.0f;
    public float playerSpeedRun = 10.0f;

    private void Start()
    {
        playerSpeedCurrent = playerSpeedWalk;
    }

    private void Update()
    {
        float x = Input.GetAxis("Horizontal");
        float y = 0.001f;
        float z = Input.GetAxis("Vertical");

        Vector3 move = transform.right * x + transform.up * y + transform.forward * z;

        controller.Move(move * playerSpeedCurrent * Time.deltaTime);
    }
}
